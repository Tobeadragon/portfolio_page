{
  "browsers": ["chrome"],
  "src": ["e2e/**/*.spec.ts"],
  "reporter": ["spec", "html:e2e/reports/report.html"],
  "screenshots": {
    "path": "e2e/screenshots/",
    "takeOnFails": true,
    "pathPattern": "${DATE}_${TIME}/${BROWSER}/${TEST}.png"
  },
  "videoPath": "e2e/videos",
  "videoOptions": {
    "singleFile": true,
    "failedOnly": true
  },
  "concurrency": 1,
  "selectorTimeout": 3000,
  "assertionTimeout": 3000,
  "pageLoadTimeout": 3000
} 